<div class="container">
 <div class="row">
<%= render 'books/list', book: @book,user: current_user %>

   <div class="col-xs-9">
  <table class="table table-striped">
  	<h2>Users</h2>
  <tr>
	 <th>image</th>
	 <th>name</th>
	 <th></th>
  </tr>

   <% @users.each do |user| %>
	<tr>
		<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
		<td><%= user.name %></td>
		<td><%= link_to "Show",user_path(user.id) %></td>
	</tr>
   <% end %>
</table>
</div>
</div>
</div>