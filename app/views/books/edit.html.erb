<div class="container">
<div class="row">
<div class="top-message col-xs-offset-3 col-xs-6">

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <%= pluralize(@book.errors.count,"error") %>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      </div>
      <% end %>
<% end %>

<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

<h6>Title</h6>
<%= f.text_field :title %>

<h6>Opinion</h6>
<%= f.text_area :body %><br>
<div class="actions">
  <input class="btn btn-primary" type="submit" value="Update Book"><br>
</div>

<%= link_to "Show",book_path(@book.id) %> | 
<%= link_to "Back",books_path %>
<% end %>
</div>
</div>
</div>
