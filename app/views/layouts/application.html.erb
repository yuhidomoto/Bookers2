<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top">
   <div class="container">
    <div class="navbar-header">
      <a class="nav navbar-nav navbar-left">Bookers</a>
    </div>

    <div class="collapse navbar-collapse" id="navbarEexample8">
    <ul class="nav navbar-nav navbar-right">

   <% if user_signed_in? %>
    <li class="home">
      <%= link_to ' Home', user_path(current_user.id), class: "glyphicon glyphicon-home" %></li>
    <li class="user">
      <%= link_to ' Users', users_path, class: "glyphicon glyphicon-user" %></li>
    <li class="books">
      <%= link_to ' Books', books_path, class: "glyphicon glyphicon-book" %></li>
    <li class="logout">
      <%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %></li>


    <% else %>
      <li class="home">
        <%= link_to ' Home', root_path, class: "glyphicon glyphicon-home" %></li>
      <li class="about">
        <%= link_to ' About', home_about_path, class: "glyphicon glyphicon-link" %></li>
      <li class="signup">
        <%= link_to " Sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %></li>
      <li class="login">
        <%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
    <% end %>
    
      </ul>
    </div>
  </div>
</nav>
</body>

     <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
      <% end %>

      <% if flash[:success] %>
        <p><%= flash[:success] %></p>
      <% end %>

  <%= yield %>

      <footer>
      <div class="container">
       <div class="row">
        <div class="col-xs-3 col-xs-offset-9">
      <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
     </footer>

   </div>
  </div>
</html>
